{
  "compilerOptions": {
    "target": "ES2020",
    "noUncheckedIndexedAccess": true, // new in TS 4.1
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@cross-country/*": ["lib/*"],
      "@cross-country/components": ["lib/components/*"],
      "@cross-country/hooks/*": ["lib/hooks/*"],
      "@cross-country/atoms/*": ["lib/components/atoms/*"],
      "@cross-country/molecules/*": ["lib/components/molecules/*"],
      "@cross-country/organisms/*": ["lib/components/organisms/*"],
      "@cross-country/services/*": ["lib/services/*"],
      "@cross-country/models/*": ["lib/models/*"],
      "@cross-country/types/*": ["lib/types/*"],
      "@cross-country/utils/*": ["lib/utils/*"],
      "@cross-country/constants/*": ["lib/constants/*"]
    }

    /* Linting 
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    */
  },
  "include": ["src", "lib"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "declaration": true,
  "declarationDir": "types"
}
