{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@cross-country/*": ["*"],
      "@cross-country/lib": ["lib"],
      "@cross-country/hooks/*": ["lib/hooks/*"],
      "@cross-country/atoms/*": ["lib/components/atoms/*"],
      "@cross-country/molecules/*": ["lib/components/molecules/*"],
      "@cross-country/organisms/*": ["lib/components/organisms/*"]
    }

    /* Linting 
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    */
  },
  "include": ["src", "lib"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
